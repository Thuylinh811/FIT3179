{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Stock prices of 5 Tech Companies over Time.",
  "title": "Top 10 Universities' Total Score",
  "data": {
    "url": "https://raw.githubusercontent.com/Thuylinh811/FIT3179/main/Long%20data%20total%20score%20top%2010.csv"
  },
  "width": 399,
  "height": 300,
  "mark": {"type": "line", "point": true},
  "params": [
    {
      "name": "legend_interact",
      "select": {"type": "point", "fields": ["university"]},
      "bind": "legend"
    }
  ],
  "encoding": {
    "x": {"title": "Year", "timeUnit": "year", "field": "date","axis":{"tickCount":5}},
    "y": {
      "title": "Score",
      "aggregate": "average",
      "field": "score",
      "type": "quantitative",
      "scale": {"zero": false}
    },
    "color": {
      "field": "university",
      "type": "nominal",
      "scale": {
        "range": [
          "#142458",
          "#186ba1",
          "#1a9ce6",
          "#2fb7e1",
          "#1bd5d4",
          "#1de4bd",
          "#7cd5c0",
          "#3ca57b",
          "#1b8689",
          "#0b686a"
        ]
      }
    },
    "opacity": {
      "condition": {"param": "legend_interact", "value": 1},
      "value": 0.2
    }
  },
  "config": {}
}